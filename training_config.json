{
  "run_name": "tinystories_debug",
  "device": "mps",
  "wandb": {
    "project": "cs336-basics",
    "tags": ["debug", "tinystories"],
    "watch_log_freq": 100
  },
  "optimizer": {
    "type": "adamw",
    "lr": 3e-3,
    "betas": [0.9, 0.999],
    "eps": 1e-8,
    "weight_decay": 0.01
  },
  "model": {
    "vocab_size": 10000,
    "context_length": 256,
    "d_model": 512,
    "num_layers": 4,
    "num_heads": 16,
    "dff": 1344,
    "rope_theta": 10000.0,
    "dtype": "float32"
  },
  "lr_scheduler": {
    "type": "cosine",
    "lr_max": 3e-4,
    "lr_min": 1e-6,
    "T_warmup": 20,
    "T_c": 1000
  },
  "training": {
    "batch_size": 16,
    "max_iters": 5000,
    "grad_clip_norm": 1.0,
    "run_valid_interval": 20,
    "save_checkpoint_interval": 200,
    "checkpoint_dir": "checkpoints/tinystories_debug",
    "train_dataset_path": "data/tinystories_minimal_test_token_ids.npy",
    "valid_dataset_path": "data/tinystories_valid_token_ids.npy"
  }
}
