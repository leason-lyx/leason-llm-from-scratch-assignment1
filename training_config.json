{
  "run_name": "tinystories_train",
  "device": "cuda",
  "wandb": {
    "project": "cs336-basics",
    "tags": ["train", "tinystories"],
    "watch_log_freq": 50
  },
  "optimizer": {
    "type": "adamw",
    "lr": 3e-4,
    "betas": [0.9, 0.95],
    "eps": 1e-8,
    "weight_decay": 0.01
  },
  "model": {
    "vocab_size": 10000,
    "context_length": 256,
    "d_model": 512,
    "num_layers": 4,
    "num_heads": 16,
    "dff": 1344,
    "rope_theta": 10000.0,
    "dtype": "float32"
  },
  "lr_scheduler": {
    "type": "cosine",
    "lr_max": 3e-4,
    "lr_min": 3e-5,
    "T_warmup": 500,
    "T_c": 10000
  },
  "training": {
    "batch_size": 128,
    "max_iters": 10000,
    "grad_clip_norm": 1.0,
    "run_valid_interval": 10,
    "save_checkpoint_interval": 5000,
    "checkpoint_dir": "checkpoints",
    "train_dataset_path": "data/tinystories_train_token_ids.npy",
    "valid_dataset_path": "data/tinystories_valid_token_ids.npy"
  }
}
