{
  "run_name": "tinystories_debug",
  "device": "mps",
  "optimizer": {
    "type": "adamw",
    "lr": 3e-3,
    "betas": [0.9, 0.95],
    "eps": 1e-8,
    "weight_decay": 0.1
  },
  "model": {
    "vocab_size": 10000,
    "context_length": 256,
    "d_model": 512,
    "num_layers": 4,
    "num_heads": 16,
    "dff": 1344,
    "rope_theta": 10000.0,
    "dtype": "float32"
  },
  "scheduler": {
    "type": "cosine",
    "lr_max": 1e-3,
    "lr_min": 1e-5,
    "T_warmup": 10,
    "T_c": 1000
  },
  "training": {
    "batch_size": 32,
    "max_iters": 2000,
    "grad_clip_norm": 1.0,
    "run_valid_interval": 20,
    "save_checkpoint_interval": 200,
    "checkpoint_dir": "checkpoints/tinystories_debug",
    "train_dataset_path": "data/tinystories_train_token_ids.npy",
    "valid_dataset_path": "data/tinystories_valid_token_ids.npy"
  }
}
